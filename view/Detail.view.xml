<mvc:View controllerName="com.james.spectre.search.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<content>
		
			<ObjectHeader iconActive="false" id="detailHeader" introActive="false" number="" numberUnit="" title="{ProductName}"
				titleActive="false">
				<attributes id="detailAttributes">
					<ObjectAttribute active="false" id="attribute" text="{i18n>detailText}"></ObjectAttribute>
				</attributes>
				<firstStatus id="detailStatus">
					<ObjectStatus id="status" text=""></ObjectStatus>
				</firstStatus>
			</ObjectHeader>
			
			<f:SimpleForm columnsL="1" editable="false" emptySpanL="4" emptySpanM="4" id="iconTabFilter1form" labelSpanL="3" labelSpanM="3"
				layout="ResponsiveGridLayout" minWidth="1024">
				<f:content>
					<Label id="label1" text="ProductName"></Label>
					<Text id="text1" maxLines="0" text="{ProductName}"></Text>
					<Label id="label2" text="ProductID"></Label>
					<Text id="text2" maxLines="0" text="{ProductID}"></Text>
					<Label id="label3" text=""></Label>
					<Text id="text3" maxLines="0" text=""></Text>
					<core:ExtensionPoint name="extIconTabFilterForm1"/>
				</f:content>
			</f:SimpleForm>
			
			<Image src="images/{ProductID}.jpg" width="100%" />

		</content>
		<footer id="detailFooter">
			<Toolbar id="detailToolbar">
				<content>
					<ToolbarSpacer id="toolbarSpacer"></ToolbarSpacer>
					<Button icon="sap-icon://action" id="actionButton" press="openActionSheet"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>