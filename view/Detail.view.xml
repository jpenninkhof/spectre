<mvc:View controllerName="com.james.spectre.search.view.Detail" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page showHeader="false" id="detailPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<content>
		
			<ObjectHeader iconActive="false" id="detailHeader" introActive="false" number="" numberUnit="" title="{Name}"
				titleActive="false">
				<attributes id="detailAttributes">
					<ObjectAttribute active="false" id="attribute" text="{i18n>detailText}"></ObjectAttribute>
				</attributes>
				<firstStatus id="detailStatus">
					<ObjectStatus id="status" text=""></ObjectStatus>
				</firstStatus>
			</ObjectHeader>
			
			<Panel headerText="Details">
				<f:SimpleForm 
					columnsL="1" 
					editable="false" 
					emptySpanL="4" 
					emptySpanM="4" 
					labelSpanL="3" 
					labelSpanM="3"
					layout="ResponsiveGridLayout" minWidth="1024">
					<f:content>
						<Label id="label1" text="ProductName"></Label>
						<Text id="text1" maxLines="0" text="{Name}"></Text>
						<Label id="label2" text="ProductID"></Label>
						<Text id="text2" maxLines="0" text="{Id}"></Text>
						<Label id="label3" text="Rating"></Label>
						<Text id="text3" maxLines="0" text="{ProductionRating}"></Text>
					</f:content>
				</f:SimpleForm>
			</Panel>

			<Panel headerText="Is it any good?" width="100%">
				<FlexBox width="100%"
					alignItems="Center"
					justifyContent="Center">
					<items>
						<Image src="images/GreenEarth.png" width="10%" visible="{= ${ProductionRating} > 0 }" />
						<Image src="images/GreenEarth.png" width="10%" visible="{= ${ProductionRating} > 1 }" />
						<Image src="images/GreenEarth.png" width="10%" visible="{= ${ProductionRating} > 2 }" />
						<Image src="images/GreenEarth.png" width="10%" visible="{= ${ProductionRating} > 3 }" />
						<Image src="images/GreenEarth.png" width="10%" visible="{= ${ProductionRating} > 4 }" />
					</items>
				</FlexBox>
			</Panel>

			<Panel headerText="Your turn" width="100%">
				<FlexBox width="100%"
					alignItems="Center"
					justifyContent="Center">
					<items>
						<Button text="Compare" icon="sap-icon://compare-2" class="sapUiResponsiveMargin" />
						<Button text="Share" icon="sap-icon://share-2" class="sapUiResponsiveMargin" press="onSharePress" />
					</items>
				</FlexBox>
			</Panel>

			<Panel headerText="{Name} Gallery">
				<Image src="images/{Id}.jpg" width="100%" />
			</Panel>

		</content>
	</Page>
</mvc:View>